{{!-- 
config = {
  name: "module_name",
  category: ["category_name"],
  tag: ["tag_name"],
  _filePath: "relative_file_path_from_docsroot",
}
 --}}

{{#if name}}
<h2 class="ronde-module__heading" id="{{name}}"><a href="#{{name}}"></a>{{name}}</h2>
<div class="ronde-module__filepath">{{path}}</div>
{{/if}}
{{#if tag}}
<ul class="ronde-tags">
{{#each tag}}
<li class="ronde-tags__item ronde-tags__item--{{this}}">{{this}}
{{/each}}
</ul>
{{/if}}
{{{html}}}
