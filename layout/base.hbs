<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>{{title}}</title>
    <style>
      body {
        margin: 0;
        padding: 0;
      }
      pre.editor {
        padding: 5px;
        overflow: scroll;
        margin: 0 5px;
      }
      .ronde-codeblock__header {
        background-color: #1d1f21;
        border-bottom: 1px solid #3c4043;
        padding: 3px 5px;
        color: #fff;
        font-size: 11px;
        text-align: left;
        margin: 5px 5px 0;
      }
      .ronde-heading {
        background-color: #555;
        color: #eee;
        padding-left: 5px;
      }
    </style>
    <link href="./ronde_assets/css/highlight/monokai.css" rel="stylesheet">
    <link href="./ronde_assets/css/theme.css" rel="stylesheet">
    {{{config_css}}}
    {{{assets_css}}}
  </head>
<body>
  {{{config_js}}}
  {{{assets_js}}}
  {{#if name}}
  <h1 class="ronde-heading">{{name}}</h1>
  {{/if}}
  {{{body}}}
</body>
</html>
